meta {
  name: Client-Server
  seq: 4
}

auth {
  mode: bearer
}

auth:bearer {
  token: {{userToken}}
}

script:pre-request {
  // Use the standalone token variable if a MAS token is not set
  // in the a environment .env file
  const userTokenRuntime = bru.getVar("userTokenRuntime");
  const userToken = bru.getEnvVar("userToken");
  
  if (userTokenRuntime && !userToken) {
    bru.setEnvVar("userToken", userTokenRuntime);
  }
}
